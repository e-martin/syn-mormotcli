{
  "root": "./",
  "entrypoint": "index.html",
  "shell": "syn-mormotcli.js",
  "fragments": [
    "demo/index.html",
    "./syn-commons.js"
  ],
  "sources": [
    "package.json",
    "demo/analysis.json",
    "README.md"
  ],
  "extraDependencies": [
  ],
  "moduleResolution": "node",
  "builds": [
    {
      "name": "SynMormotCli",
      "preset": "es6-bundled",
      "js": {"minify": true, "compile": false},
      "css": {"minify": true},
      "html": {"minify": true},
      "bundle": true,
      "addServiceWorker": false,
      "addPushManifest": false
    },
    {
      "name": "SynMormotCliUn",
      "preset": "es6-unbundled",
      "js": {"minify": true, "compile": false},
      "css": {"minify": true},
      "html": {"minify": true},
      "bundle": false,
      "addServiceWorker": false,
      "addPushManifest": false
    },
    {
      "name": "dev",
      "js": {"minify": false, "compile": false},
      "css": {"minify": false},
      "html": {"minify": false},
      "bundle": false,
      "addServiceWorker": false,
      "addPushManifest": false
    }
  ],
  "npm": true,
  "lint": {
    "rules": [
      "polymer-3"
    ]
  }
}
